<Window x:Class="HotelManagerment.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelManagerment"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">

    <Grid Background="#f0f0f0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Đăng Nhập" FontSize="50" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,20,0,10"/>

        <StackPanel Grid.Row="1" Margin="40">
            <TextBlock Text="Username:" Margin="0,10,0,5"/>
            <TextBox x:Name="UsernameTextBox" Height="30"/>

            <TextBlock Text="Password:" Margin="0,10,0,5"/>
            <PasswordBox x:Name="PasswordBox" Height="30"/>

            <Button Content="Login" Height="35" Margin="0,20,0,0" 
                    Background="#007ACC" Foreground="White" 
                   />
        </StackPanel>


    </Grid>
</Window>
