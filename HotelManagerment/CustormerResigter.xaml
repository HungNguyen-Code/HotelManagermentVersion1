<Window x:Class="HotelManagerment.CustormerResigter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelManagerment"
        mc:Ignorable="d"
        Title="CustormerResigter" Height="450" Width="800">

   
        <Grid Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Cột 1 -->
            <StackPanel Grid.Column="0" Margin="10">
                <TextBlock Text="Name" FontWeight="Bold"/>
                <TextBox x:Name="txtName" />

                <TextBlock Text="Mobile No" FontWeight="Bold" Margin="0,10,0,0"/>
                <TextBox x:Name="txtMobile" />

                <TextBlock Text="Nationality" FontWeight="Bold" Margin="0,10,0,0"/>
                <TextBox x:Name="txtNationality"/>

                <TextBlock Text="Gender" FontWeight="Bold" Margin="0,10,0,0"/>
                <ComboBox x:Name="cbGender" Height="25">
                    <ComboBoxItem Content="Male"/>
                    <ComboBoxItem Content="Female"/>
                    <ComboBoxItem Content="Other"/>
                </ComboBox>

                <TextBlock Text="Date of Birth" FontWeight="Bold" Margin="0,10,0,0"/>
                <DatePicker x:Name="dpDOB"/>
            </StackPanel>

            <!-- Cột 2 -->
            <StackPanel Grid.Column="1" Margin="10">
                <TextBlock Text="ID Proof" FontWeight="Bold"/>
                <TextBox x:Name="txtIDProof" />

                <TextBlock Text="Address" FontWeight="Bold" Margin="0,10,0,0"/>
                <TextBox x:Name="txtAddress" />

                <TextBlock Text="Check In" FontWeight="Bold" Margin="0,10,0,0"/>
                <DatePicker x:Name="dpCheckIn"/>
            </StackPanel>

            <!-- Cột 3 -->
            <StackPanel Grid.Column="2" Margin="10">
                <TextBlock Text="Bed" FontWeight="Bold"/>
                <ComboBox x:Name="cbBed">
                    <ComboBoxItem Content="Single"/>
                    <ComboBoxItem Content="Double"/>
                  
                </ComboBox>

                <TextBlock Text="Room Type" FontWeight="Bold" Margin="0,10,0,0"/>
                <ComboBox x:Name="cbRoomType">
                <ComboBoxItem Content="normal room"/>
                <ComboBoxItem Content="VipRoom"/>

            </ComboBox>

                <TextBlock Text="Room No" FontWeight="Bold" Margin="0,10,0,0"/>
                <ComboBox x:Name="cbRoomNo" />

                <TextBlock Text="Price" FontWeight="Bold" Margin="0,10,0,0"/>
                <TextBox x:Name="txtPrice" IsReadOnly="True"/>

                <Button Content="Allot Room" Width="120" Height="35" Margin="0,20,0,0"
                    HorizontalAlignment="Right" Click="AllotRoom_Click"/>
            </StackPanel>
        </Grid>
   


</Window>
