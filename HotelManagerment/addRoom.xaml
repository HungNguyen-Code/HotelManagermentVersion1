<Window x:Class="HotelManagerment.addRoom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelManagerment"
        mc:Ignorable="d"
        Title="addRoom" Height="600" Width="1200">
    
        <Grid Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- DataGrid hiển thị danh sách phòng -->
            <GroupBox Header="Add Room" FontSize="16">
                <DataGrid x:Name="dgRoomList" AutoGenerateColumns="False" Margin="0,0,-2,0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding RoomID}" Width="*"/>
                        <DataGridTextColumn Header="RoomNuber" Binding="{Binding RoomNo}" Width="*"/>
                        <DataGridTextColumn Header="RoomType" Binding="{Binding RoomType}" Width="*"/>
                        <DataGridTextColumn Header="Bed" Binding="{Binding Bed}" Width="*"/>
                        <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="*"/>
                        <DataGridTextColumn Header="Booking" Binding="{Binding Booked}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>

            <!-- Form nhập thông tin phòng -->
            <StackPanel Grid.Column="1" Margin="20">
                <TextBlock Text="RoomNumber" Margin="0,10,0,2"/>
                <TextBox x:Name="txtRoomNo" Height="30"/>

                <TextBlock Text="RoomType" Margin="0,10,0,2"/>
                <ComboBox x:Name="cbRoomType" Height="30">
                <ComboBoxItem Content="normal room"/>
                    <ComboBoxItem Content="VipRoom"/>
                    
                </ComboBox>

                <TextBlock Text="Bed" Margin="0,10,0,2"/>
                <ComboBox x:Name="cbBedType" Height="30">
                    <ComboBoxItem Content="Single"/>
                    <ComboBoxItem Content="Double"/>
                    
                </ComboBox>

                <TextBlock Text="Price" Margin="0,10,0,2"/>
                <TextBox x:Name="txtPrice" Height="30"/>

            <Button Content="Add Room" Width="150" Height="35" Margin="0,20,0,0" HorizontalAlignment="Center" Click=" Add_Click"/>
            </StackPanel>
        </Grid>
   


</Window>
