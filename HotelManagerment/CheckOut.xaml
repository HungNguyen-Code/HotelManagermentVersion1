<Window x:Class="HotelManagerment.CheckOut"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelManagerment"
        mc:Ignorable="d"
        Title="CheckOut" Height="500" Width="1100">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
           
            <RowDefinition Height="*"/>
            
            <RowDefinition Height="Auto"/>
            <!-- Phần điền thông tin và checkout -->
        </Grid.RowDefinitions>

        <!-- 1. Tiêu đề + Tìm kiếm -->
        <DockPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Customer Check Out"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#2C3E50"
                       Margin="0,0,20,0"
                       VerticalAlignment="Center"/>
            <TextBlock Text="Search Name:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="txtSearchName" Width="200" VerticalAlignment="Center"
                     />
        </DockPanel>

        <!-- 2. Danh sách khách hàng -->
        <DataGrid x:Name="dgCustomerList"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  SelectionMode="Single"
                  
                  Margin="0,0,0,10"
                  HeadersVisibility="Column"
                  RowHeaderWidth="0" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Cid}" Width="50"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Cname}" Width="150"/>
                <DataGridTextColumn Header="Mobile" Binding="{Binding Mobile}" Width="120"/>
                <DataGridTextColumn Header="Nationality" Binding="{Binding Nationality}" Width="100"/>
                <DataGridTextColumn Header="Gender" Binding="{Binding Gender}" Width="80"/>
                <DataGridTextColumn Header="Check In" Binding="{Binding Checkin}" Width="100"/>
                <DataGridTextColumn Header="Check Out" Binding="{Binding Checkout}" Width="100"/>
                <DataGridTextColumn Header="ID Proof" Binding="{Binding Idproof}" Width="120"/>
                <DataGridTextColumn Header="Address" Binding="{Binding Address}" Width="150"/>
                <DataGridTextColumn Header="Room No" Binding="{Binding RoomNo}" Width="80"/>
                <DataGridTextColumn Header="Room Type" Binding="{Binding RoomType}" Width="100"/>
                <DataGridTextColumn Header="Bed" Binding="{Binding Bed}" Width="80"/>
                <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="100"/>

            </DataGrid.Columns>
        </DataGrid>

        <!-- 3. Thông tin & Check Out -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0">

            <StackPanel Margin="0,0,20,0">
                
                <DatePicker x:Name="dpCheckOutDate" Width="140"/>
            </StackPanel>
            <Button Content="Check Out"
                    Width="110"
                     
                    Height="30" Click="CheckOut_Click"
                    />

            <!-- Button -->
        </StackPanel>
    </Grid>
</Window>
