<Window x:Class="HotelManagerment.CustormerDetail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelManagerment"
        mc:Ignorable="d"
        Title="CustormerDetail" Height="500" Width="1307">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

       
        <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,10">
            <TextBlock Text="Customer Details"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#2C3E50"
                       VerticalAlignment="Center"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right">
                <TextBlock Text="Search"
                           FontStyle="Italic"
                           Margin="0,0,5,0"
                           VerticalAlignment="Center"/>
                <ComboBox x:Name="cbFilter"
          Width="200"
          Height="30" SelectionChanged="cbFilter_SelectionChanged_1"
          >
                    <ComboBox.Items>
                        <ComboBoxItem Content="All Customer Details"/>
                        <ComboBoxItem Content="In Hotel Customer"/>
                        <ComboBoxItem Content="CheckOut Customer"/>
                    </ComboBox.Items>
                </ComboBox>

            </StackPanel>
        </DockPanel>

       
        <DataGrid x:Name="dgCustomerDetails"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  SelectionMode="Single"
                  RowHeight="30"
                  HeadersVisibility="Column"
                  FontSize="14" Margin="0,0,10,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding  Cid}" Width="40"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Cname}" Width="100"/>
                <DataGridTextColumn Header="Mobile" Binding="{Binding Mobile}" Width="120"/>
                <DataGridTextColumn Header="Nationality" Binding="{Binding Nationality}" Width="100"/>
                <DataGridTextColumn Header="Gender" Binding="{Binding Gender}" Width="80"/>
                <DataGridTextColumn Header="Check In" Binding="{Binding Checkin}" Width="100"/>
                <DataGridTextColumn Header="Check Out" Binding="{Binding Checkout}" Width="100"/>
                <DataGridTextColumn Header="ID Proof" Binding="{Binding Idproof}" Width="120"/>
                <DataGridTextColumn Header="Address" Binding="{Binding Address}" Width="120"/>
                <DataGridTextColumn Header="Room No" Binding="{Binding Roomid}" Width="80"/>
                <DataGridTextColumn Header="Bed" Binding="{Binding Bed}" Width="90"/>
                <DataGridTextColumn Header="Room Type" Binding="{Binding RoomType}" Width="100"/>
                <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
