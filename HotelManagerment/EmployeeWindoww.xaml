<Window x:Class="HotelManagerment.EmployeeWindoww"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelManagerment"
        mc:Ignorable="d"
        Title="EmployeeWindoww" Height="450" Width="800">
    <Grid>
        <TabControl>
            <!-- Tab 1: Đăng ký nhân viên -->
            <TabItem Header="Employee Registration">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Cột trái -->
                    <StackPanel Margin="10" Grid.Column="0">
                        <TextBlock Text="ID -" FontWeight="Bold"/>
                        <TextBlock x:Name="txtId" Text="0" Foreground="Red" FontWeight="Bold"/>

                        <TextBlock Text="Name" Margin="0,10,0,0"/>
                        <TextBox x:Name="txtName"/>

                        <TextBlock Text="Mobile No" Margin="0,10,0,0"/>
                        <TextBox x:Name="txtMobile"/>

                        <TextBlock Text="Gender" Margin="0,10,0,0"/>
                        <ComboBox x:Name="cbGender">
                            <ComboBoxItem Content="Male"/>
                            <ComboBoxItem Content="Female"/>
                        </ComboBox>

                        <TextBlock Text="Email Id" Margin="0,10,0,0"/>
                        <TextBox x:Name="txtEmail"/>
                    </StackPanel>

                    <!-- Cột phải -->
                    <StackPanel Margin="10" Grid.Column="1">
                        <TextBlock Text="User Name"/>
                        <TextBox x:Name="txtUsername"/>

                        <TextBlock Text="PassWord" Margin="0,10,0,0"/>
                        <PasswordBox x:Name="txtPassword"/>
                        <TextBlock Text="Role" Margin="0,10,0,2"/>
                        <ComboBox x:Name="cbRole">
                            <ComboBoxItem Content="Admin"/>
                            <ComboBoxItem Content="Manager"/>
                            <ComboBoxItem Content="Staff"/>
                        </ComboBox>



                        <Button Content="Register"
                             Width="120" Height="30"
                             Margin="0,20,0,0"
                             HorizontalAlignment="Left"
                             Click="Register_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Tab 2: Chi tiết nhân viên -->
            <TabItem Header="Employee Details">
                <Grid Margin="10">
                    <DataGrid x:Name="dgEmployeeList"
                           AutoGenerateColumns="False"
                           CanUserAddRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Eid}" Width="50"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding Ename}" Width="100"/>
                            <DataGridTextColumn Header="Mobile" Binding="{Binding Mobile}" Width="100"/>
                            <DataGridTextColumn Header="Gender" Binding="{Binding Gender}" Width="80"/>
                            <DataGridTextColumn Header="Email" Binding="{Binding Emailid}" Width="150"/>
                            <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="100"/>
                            <DataGridTextColumn Header="Password" Binding="{Binding Pass}" Width="100"/>
                            <DataGridTextColumn Header="Role" Binding="{Binding role}" Width="*"/>

                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Tab 3: Xóa nhân viên -->
            <TabItem Header="Delete Employee">
                <Grid Margin="10">
                    <StackPanel>
                        <TextBlock Text="Select Employee to Delete from List Tab" FontWeight="Bold"/>
                        <Button Content="Delete"
                             Width="120" Height="30"
                             Margin="0,20,0,0"
                             Click="Delete_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
